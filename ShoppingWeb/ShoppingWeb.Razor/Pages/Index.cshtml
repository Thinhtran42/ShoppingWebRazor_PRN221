@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <p class="display-4" style="font-size: 1.3rem; font-weight: 500;">Pizzas Menu</p>
    <div class="ps-5 ms-5">
        <div class="d-flex mt-2" style="font-size: 0.8rem;">
            <div>
                <p class="px-2 ps-0"
                   style="font-size: 0.8rem; font-weight: bolder;">Search</p>
            </div>
            <div class="mx-3">
                <div>
                    <input id="searchInput" type="text" style="border-radius: 3px; border: 1px solid #dfe0e2;" class="px-2" />
                </div>
                <div class="mt-2 pt-1">
                    <button class="px-2 py-1 border-0" style="background-color: blue;
                    color: #fff; border-radius: 5px" onclick="searchProducts()">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>
    <p class="display-4" style="font-size: 1rem; font-weight: 500">All Pizzas</p>
    <br/>
    <div style="width: 90%; gap: 5%; margin: 0 auto" class="d-flex justify-content-start flex-wrap">
        @if (Model.Products != null)
        {
            @foreach (var product in Model.Products)
            {
                <div style="width: 30%; background-color:#fff; box-shadow: 1px 4px 8px -1px rgba(0,0,0,0.75);" class="my-4 mt-0 py-2 pt-0">
                    <img style="width: 100%; height: 250px" src="data:image/png;base64,@Convert.ToBase64String(product.ProductImage)" alt="Product Image">
                    <div class="productInformation my-0 mt-3 px-3">
                        <div style="font-size: 1.3rem; font-weight: 500;" class="d-flex">
                            <p style="width: 50%; color: #204ac9" class="my-0">@product.ProductName</p>
                            <p style="width: 50%; text-align: right" class="my-0">$@product.UnitPrice</p>
                        </div>
                        <p style="font-size: 0.9rem; font-weight: bold" class="my-0 mt-1">
                            Category: @product.Category?.CategoryName
                        </p>
                        <p style="font-size: 0.9rem;" class="mt-1">@product.Description</p>
                        <div class="my-2 mt-2">
                            <button class="px-2 py-1 border-0" style="background-color: #204ac9;
                    color: #fff; border-radius: 5px; font-size: 0.9rem">
                                Add Pizza
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section scripts {
    <script>
        function searchProducts() {
            var searchTerm = document.getElementById("searchInput").value;
            window.location.href = "/Index?searchInput=" + searchTerm;
        }
    </script>
}
